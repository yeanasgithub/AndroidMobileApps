<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.collections.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<VBox prefHeight="500.0" prefWidth="500.0" spacing="20.0" styleClass="vbox" stylesheets="@main.css" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="a4.ybond.weather.WeatherViewController">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>
    <children>
      <GridPane>
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" percentWidth="50.0" />
          <ColumnConstraints hgrow="SOMETIMES" percentWidth="25.0" />
            <ColumnConstraints hgrow="SOMETIMES" percentWidth="25.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label prefHeight="16.0" prefWidth="134.0" text="Location:" />
            <Label prefHeight="16.0" prefWidth="134.0" text="Latitude:" GridPane.columnIndex="1" />
            <Label prefHeight="16.0" prefWidth="143.0" text="Longitude:" GridPane.columnIndex="2" />
            <ComboBox fx:id="comboLoc" onAction="#onLocationChanged" prefHeight="26.0" prefWidth="215.0" GridPane.hgrow="ALWAYS" GridPane.rowIndex="1">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="Bakersfield,CA,USA" />
                        <String fx:value="Las Vegas,NV,USA" />
                        <String fx:value="Woodson,TX,USA" />
                        <String fx:value="Whittier,CA,USA" />
                        <String fx:value="Wasco,CA,USA" />
                        <String fx:value="San Luis Obispo,CA,USA" />
                        <String fx:value="Orlando,FL,USA" />
                        <String fx:value="Seoul,KR" />

                    </FXCollections>

                </items>
            </ComboBox>
            <Label fx:id="lablLatitude" text="0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <Label fx:id="lablLongitude" text="0" GridPane.columnIndex="2" GridPane.rowIndex="1" />
         </children>
      </GridPane>
      <GridPane>
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label text="Low:" />
            <Label text="High:" GridPane.columnIndex="2" />
            <Label text="Current:" GridPane.rowIndex="1" />
            <Label text="Feels Like:" GridPane.columnIndex="2" GridPane.rowIndex="1" />
            <Label text="Pressure:" GridPane.rowIndex="2" />
            <Label text="Humidity:" GridPane.columnIndex="2" GridPane.rowIndex="2" />
            <Label fx:id="lablLow" text="0" GridPane.columnIndex="1" />
            <Label fx:id="lablHigh" text="0" GridPane.columnIndex="3" />
            <Label fx:id="lablCurrent" text="0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <Label fx:id="lablFeelsLike" text="0" GridPane.columnIndex="3" GridPane.rowIndex="1" />
            <Label fx:id="lablPressure" text="0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <Label fx:id="lablHumidity" text="0" GridPane.columnIndex="3" GridPane.rowIndex="2" />
         </children>
      </GridPane>
      <GridPane>
        <columnConstraints>
          <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="100.0" prefHeight="100.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <ImageView fx:id="imgWeatherIcon" fitHeight="100.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="http://openweathermap.org/img/wn/01d@2x.png" />
               </image>
            </ImageView>
            <Label fx:id="lablWeatherDescript" text="Clear" GridPane.rowIndex="1" />
            <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
            <ImageView fitHeight="100.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true" GridPane.columnIndex="1">
               <image>
                  <Image url="@wind_bg_orange.png" />
               </image>
            </ImageView>
            <ImageView fx:id="imgWindDirection" fitHeight="100.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true" GridPane.columnIndex="1">
               <image>
                  <Image url="@wind_dir_orange.png" />
               </image>
            </ImageView>
            <Label fx:id="lablWindSpeed" text="0 MPH" GridPane.columnIndex="1" GridPane.rowIndex="1" />
         </children>
      </GridPane>
   </children>
</VBox>
