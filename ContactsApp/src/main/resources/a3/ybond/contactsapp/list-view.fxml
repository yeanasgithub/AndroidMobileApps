<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<VBox prefHeight="700.0" prefWidth="800.0" stylesheets="@Default.css" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="a3.ybond.contactsapp.ListViewController">
   <children>
      <MenuBar>
        <menus>
          <Menu mnemonicParsing="false" text="Contacts">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#onNewContact" text="New" />
                  <MenuItem mnemonicParsing="false" onAction="#onEditContact" text="Edit" />
                  <MenuItem mnemonicParsing="false" onAction="#onDeleteContact" text="Delete" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Theme">
            <items>
              <MenuItem mnemonicParsing="false" text="Default" />
                  <MenuItem mnemonicParsing="false" text="Blue" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
      <GridPane fx:id="newContact">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="100.0" minWidth="100.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
            <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" maxWidth="50.0" minWidth="50.0" prefWidth="50.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label text="First Name:" />
            <Label text="Last Name:" GridPane.rowIndex="1" />
            <Label text="Phone #:" GridPane.rowIndex="2" />
            <TextField fx:id="txtFirstName" promptText="First Name" GridPane.columnIndex="1" />
            <TextField fx:id="txtLastName" promptText="Last Name" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <TextField fx:id="txtPhone" promptText="Phone Number" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <Button maxHeight="42.0" maxWidth="42.0" minHeight="42.0" minWidth="42.0" mnemonicParsing="false" onAction="#onSaveContact" prefHeight="42.0" prefWidth="42.0" GridPane.columnIndex="2" GridPane.rowIndex="1">
               <graphic>
                  <ImageView fitHeight="42.0" fitWidth="42.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@Save.png" />
                     </image></ImageView>
               </graphic>
            </Button>
         </children>
      </GridPane>
      <ListView fx:id="contactsList" VBox.vgrow="ALWAYS" />

            


   </children>
</VBox>
